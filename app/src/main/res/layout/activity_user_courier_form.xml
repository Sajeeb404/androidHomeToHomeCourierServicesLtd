<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Courier.UserCourierForm"
    >
    <TextView
        android:id="@+id/titileid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="Courier Shipping Request Form"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sender Information :"
        android:id="@+id/titlesenderid"
        android:layout_below="@id/titileid"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        />


    <EditText
        android:id="@+id/fullnameId"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlesenderid"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:hint="Full Name" />

    <EditText
        android:id="@+id/phnId"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:layout_toRightOf="@id/fullnameId"
        android:layout_below="@+id/titlesenderid"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        />
    <EditText
        android:id="@+id/addressdid"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:layout_below="@+id/fullnameId"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <Spinner
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:id="@+id/senderbranID"
        android:layout_below="@id/fullnameId"
        android:layout_toRightOf="@id/fullnameId"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:background="@android:drawable/btn_dropdown"
        android:entries="@array/branchName"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Destination Information :"
        android:id="@+id/titleresiverid"
        android:layout_below="@id/addressdid"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/fullnameIdresiver"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleresiverid"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:hint="Full Name" />

    <EditText
        android:id="@+id/phnIdresiver"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:layout_toRightOf="@id/fullnameIdresiver"
        android:layout_below="@+id/titleresiverid"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        />

    <EditText
        android:id="@+id/addressdidresiver"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:layout_below="@+id/fullnameIdresiver"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <Spinner
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:id="@+id/resiverbranID"
        android:layout_below="@id/fullnameIdresiver"
        android:layout_toRightOf="@id/fullnameIdresiver"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:background="@android:drawable/btn_dropdown"
        android:entries="@array/branchName"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shipment Information :"
        android:id="@+id/titleshipmentid"
        android:layout_below="@id/addressdidresiver"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        />

    <Spinner
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:id="@+id/contentTypeid"
        android:layout_below="@id/titleshipmentid"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:drawable/btn_dropdown"
        android:entries="@array/contentItem"

        />

    <EditText
        android:id="@+id/contentnameID"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:hint="Content Name"
        android:layout_toRightOf="@id/contentTypeid"
        android:layout_below="@+id/titleshipmentid"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"


        />

    <EditText
        android:id="@+id/contetnWeightId"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:hint="Content Weight (kg)"
        android:layout_below="@+id/contentTypeid"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <EditText
        android:id="@+id/chargAmountID"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:hint="Total Price"
        android:layout_toRightOf="@id/contetnWeightId"
        android:layout_below="@+id/contentnameID"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment Method :"
        android:id="@+id/titlepaymentid"
        android:layout_below="@id/chargAmountID"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        />

    <RadioGroup
        android:id="@+id/radiogrouid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/titlepaymentid"
        >

        <RadioButton android:id="@+id/radio_cashOnpayID"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Cash On Payment"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"

            />

        <RadioButton
            android:id="@+id/radio_onlinePayID"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="-49dp"
            android:text="Online Payment"
            android:textStyle="bold"
            android:textSize="18dp"


            />

    </RadioGroup>

    <Button
        android:id="@+id/courierRegistrationid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radiogrouid"
        android:textAlignment="center"
        android:text="Registration"
        android:layout_marginLeft="110dp"

        />


    <Button
        android:id="@+id/Backhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radiogrouid"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:text="Back"
        android:textColor="@color/black"
        android:textStyle="bold" />


</RelativeLayout>